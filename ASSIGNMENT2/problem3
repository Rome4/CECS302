template <typename list>

void reverse(list& L){

    //Assign element values to Nodes
    //Node for iterative position, position previous, and position after
    Node *current = head;
    Node *next = NULL;
    Node *previous = NULL;

    //While loop to alter values of list elements
    while(current != NULL){

        //Node 'next' is assigned value 'current' is linked to
        next = current->next
        //Node 'current' is linked to 'previous'
        current->next = previous;
        //'previous' is assigned data in 'current'
        previous = current;
        //'current' is assigned data in 'next'
        current = next;
    }

    //current is linked to 'previous', finalizing the reversal
    current->next = previous;

    //print reversed list
    for(Node i: L){
        cout << *i << endl;
    }
}

